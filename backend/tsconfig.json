{
  "compilerOptions": {
    "module": "CommonJS", // <--- שינוי כאן! (או "nodenext")
    "esModuleInterop": true,
    "target": "es2020", // אפשר להשאיר es2017 או לשדרג ל-es2020 ומעלה
    "moduleResolution": "Node", // <--- שנה גם את זה ל-"nodenext" או "node16"
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}